    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/calendarFragment">

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.uf1_proyecto.FavoriteFragment"
