        android:id="@+id/diaryFragment"
        android:name="com.example.uf1_proyecto.DiaryFragment"
        android:label="fragment_agenda"
        tools:layout="@layout/fragment_diary" >
        <action
            android:id="@+id/action_diaryFragment_to_historyFragment"
